# English-Liminal Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# App Configuration
# ============================================================================

# App environment: development, staging, production
APP_ENV=development

# App version (will be auto-updated)
APP_VERSION=0.1.0

# ============================================================================
# API Configuration (Future - for server integration)
# ============================================================================

# API base URL (leave empty for local-only mode in MVP)
API_BASE_URL=

# API timeout in milliseconds
API_TIMEOUT=10000

# ============================================================================
# Speech & Voice Configuration
# ============================================================================

# TTS Voice (iOS voices: com.apple.ttsbundle.*, Android varies)
# Leave empty to use system default
TTS_VOICE_ID=

# TTS Speech rate (0.5 = slow, 1.0 = normal, 2.0 = fast)
TTS_SPEECH_RATE=1.0

# TTS Pitch (0.5 = low, 1.0 = normal, 2.0 = high)
TTS_PITCH=1.0

# STT Provider (future: 'expo', 'whisper', 'google', 'azure')
STT_PROVIDER=expo

# ============================================================================
# Notifications Configuration
# ============================================================================

# Enable notifications (true/false)
NOTIFICATIONS_ENABLED=true

# Default notification times (HH:MM format, 24-hour)
NOTIFICATION_MORNING_TIME=08:00
NOTIFICATION_PING_TIME=12:30
NOTIFICATION_EVENING_TIME=20:00

# ============================================================================
# Storage Configuration
# ============================================================================

# Storage provider: 'local' (AsyncStorage), 'supabase' (future), 'firebase' (future)
STORAGE_PROVIDER=local

# Storage encryption enabled (future feature)
STORAGE_ENCRYPTION_ENABLED=false

# ============================================================================
# Analytics & Telemetry
# ============================================================================

# Enable anonymous usage analytics (local only in MVP)
ANALYTICS_ENABLED=true

# Analytics provider: 'local', 'posthog', 'amplitude' (future)
ANALYTICS_PROVIDER=local

# ============================================================================
# Retention Wave Configuration
# ============================================================================

# Default decay alpha (0.7-0.9, higher = slower decay)
RETENTION_DECAY_ALPHA=0.82

# Minimum ping interval in seconds
RETENTION_PING_MIN_SEC=90

# Maximum ping interval in seconds
RETENTION_PING_MAX_SEC=3600

# ============================================================================
# Feature Flags
# ============================================================================

# Enable family mode
FEATURE_FAMILY_MODE=true

# Enable voice recording
FEATURE_VOICE_RECORDING=true

# Enable pronunciation scoring
FEATURE_PRONUNCIATION_SCORING=true

# Enable offline mode
FEATURE_OFFLINE_MODE=true

# ============================================================================
# Development & Debug
# ============================================================================

# Enable debug logging
DEBUG_ENABLED=true

# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=debug

# Enable React Native debugger
REACT_NATIVE_DEBUGGER=false

# ============================================================================
# Supabase Configuration (Future)
# ============================================================================

SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# ============================================================================
# Expo Configuration
# ============================================================================

# Expo project ID (auto-generated)
EXPO_PROJECT_ID=

# EAS Build profile
EAS_BUILD_PROFILE=development

# ============================================================================
# End of Configuration
# ============================================================================
